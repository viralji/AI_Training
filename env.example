# AI Training Platform - Environment Configuration
# Copy this file to .env and update the values
# IMPORTANT: Never commit .env file to git!

# =============================================================================
# SERVER CONFIGURATION (REQUIRED)
# =============================================================================
NODE_ENV=production
PORT=3002
HOST=0.0.0.0

# =============================================================================
# FRONTEND URL (REQUIRED)
# =============================================================================
FRONTEND_URL=https://aitraining.cloudextel.com
CORS_ORIGIN=https://aitraining.cloudextel.com

# =============================================================================
# AUTHENTICATION & SECURITY (REQUIRED)
# =============================================================================
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
SESSION_SECRET=your-super-secure-session-secret-key-minimum-32-characters-long

# Google OAuth Configuration (REQUIRED)
# Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://aitraining.cloudextel.com/auth/google/callback

# Trainer Email (optional - sets role based on email)
TRAINER_EMAILS=trainer@example.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_PATH=/var/www/CE_AI_Training/backend/database.sqlite
DATABASE_BACKUP_PATH=/var/www/CE_AI_Training/backups

# =============================================================================
# AI/GEMINI CONFIGURATION (REQUIRED)
# =============================================================================
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash
GEMINI_MAX_TOKENS=1000
GEMINI_TEMPERATURE=0.7

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_PATH=/var/www/CE_AI_Training/backend/uploads
SUBMISSIONS_PATH=/var/www/CE_AI_Training/backend/uploads/submissions
MAX_FILE_SIZE=5242880

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=true
LOG_FILE_PATH=/var/www/CE_AI_Training/logs/app.log
HEALTH_CHECK_ENABLED=true


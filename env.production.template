# AI Training Platform - Production Environment Configuration
# Copy this file to .env and update the values for your production deployment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_PATH=/var/www/ai-training-platform/backend/database.sqlite
DATABASE_BACKUP_PATH=/var/www/ai-training-platform/backups
DB_MAX_CONNECTIONS=10
DB_TIMEOUT=5000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# IMPORTANT: Change these secrets in production!
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
SESSION_SECRET=your-super-secure-session-secret-key-change-this-in-production

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Frontend URL (update with your domain)
FRONTEND_URL=https://your-domain.com

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/var/www/ai-training-platform/backend/uploads
SUBMISSIONS_PATH=/var/www/ai-training-platform/backend/uploads/submissions

# =============================================================================
# AI/GEMINI CONFIGURATION
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=1000
GEMINI_TEMPERATURE=0.7

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=https://your-domain.com

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_CONSOLE=true
LOG_FILE=true
LOG_FILE_PATH=/var/www/ai-training-platform/logs/app.log

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
CSP_ENABLED=true
HSTS_ENABLED=true
BCRYPT_ROUNDS=12

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Digital Ocean Droplet IP
DROPLET_IP=your-droplet-ip-address

# Domain name (optional, for SSL)
DOMAIN=your-domain.com
EMAIL=your-email@example.com

# =============================================================================
# MONITORING & ALERTS
# =============================================================================
# Optional: Add monitoring service configurations here
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-key



# Local Development Environment Variables Template
# Copy this file to .env.local and update with your values
# cp .env.local.example .env.local

# === Server Configuration ===
NODE_ENV=development
PORT=3002
HOST=0.0.0.0

# === Frontend URLs (for OAuth redirects and CORS) ===
FRONTEND_URL=http://localhost:8080
CORS_ORIGIN=http://localhost:8080

# === Frontend Build Variables (VITE_ prefix - used during build) ===
VITE_API_URL=http://localhost:3002/api
VITE_BACKEND_URL=http://localhost:3002
VITE_SOCKET_URL=http://localhost:3002

# === Google OAuth ===
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3002/auth/google/callback

# === Security (use strong secrets in production) ===
JWT_SECRET=dev_secret_key_change_in_production
SESSION_SECRET=dev_session_secret_change_in_production

# === AI/Gemini ===
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash
GEMINI_MAX_TOKENS=1000
GEMINI_TEMPERATURE=0.7

# === User Roles ===
TRAINER_EMAILS=trainer@example.com
TRAINEE_DOMAIN=@gmail.com

# === Proxy / Cookies ===
TRUST_PROXY=0
SESSION_COOKIE_SECURE=false

# === Database Paths (Docker container paths) ===
DATABASE_PATH=/app/database.sqlite
DATABASE_BACKUP_PATH=/app/backups
UPLOAD_PATH=/app/uploads
SUBMISSIONS_PATH=/app/uploads/submissions
MAX_FILE_SIZE=5242880

# === Email/SMTP Configuration (optional for local testing) ===
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password_here
# EMAIL_FROM=your_email@gmail.com
# EMAIL_FROM_NAME=AI Training Team

# === Logging ===
LOG_LEVEL=info
LOG_FILE=false
LOG_FILE_PATH=/app/logs/app.log
HEALTH_CHECK_ENABLED=true
